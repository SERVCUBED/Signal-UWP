            <TextBlock Text="My Items" Margin="24,8,8,8"
                       Style="{ThemeResource TitleTextBlockStyle}" />
            <Button x:Name="button" Content="Button" Margin="245,8,0,8" Click="button_Click"/>
        </Grid>-->
        
        <local:ThreadView x:Name="masterFrame"  Grid.Row="2" Margin="0"/>
        <local:MessageView x:Name="detailFrame" Grid.Column="1" Grid.RowSpan="2" Loaded="detailFrame_Loaded"/>
    
    
    </Grid>
    
    
</Page>
